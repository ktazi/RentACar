<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="RentACar.Controller.LocationVehController"
      prefHeight="400.0" prefWidth="600.0"
      alignment="TOP_CENTER">
    <Text styleClass="title" text="Details Location"/>
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <padding>
            <Insets top="20" right="20" left="20" bottom="20"/>
        </padding>
        <Text text="Date Location" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <DatePicker fx:id="date" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Text text="Nombre jours location" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Spinner fx:id="num"  GridPane.rowIndex="1" GridPane.columnIndex="1">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="10"/>
            </valueFactory>
        </Spinner>
        <Text text="Assurance" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ChoiceBox fx:id="assur" value="Assurance 1" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Assurance 2" />
                    <String fx:value="Assurance 3" />
                    <String fx:value="Assurance 4" />
                </FXCollections>
            </items>
        </ChoiceBox>
    </GridPane>
    <Button text="Valider Location" onAction="#louer"/>

</VBox>
